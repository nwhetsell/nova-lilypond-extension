<?xml version="1.0" encoding="UTF-8"?>
<syntax name="lilypond">
    <meta>
        <name>LilyPond</name>
        <type>script</type>
        <preferred-file-extension>ly</preferred-file-extension>
        <scriptable shebang="#!/usr/bin/env lilypond" />
    </meta>

    <detectors>
        <extension priority="1.0">ly,ily</extension>
    </detectors>

    <indentation>
        <increase>
            <expression>\{[^}"']*$</expression>
        </increase>
        <decrease>
            <expression>^\s*\}</expression>
        </decrease>
    </indentation>

    <comments>
        <single>
            <expression>%</expression>
        </single>
        <multiline>
            <starts-with>
                <expression>%{</expression>
            </starts-with>
            <ends-with>
                <expression>%}</expression>
            </ends-with>
        </multiline>
    </comments>

    <brackets>
        <pair open="{" close="}" />
        <pair open="[" close="]" />
        <pair open="(" close=")" />
        <pair open="&lt;" close="%gt;" />
    </brackets>

    <surrounding-pairs>
        <pair open="{" close="}" />
        <pair open="[" close="]" />
        <pair open="(" close=")" />
        <pair open="&lt;" close="&gt;" />
        <pair open='"' close='"' />
    </surrounding-pairs>

    <injection>
        <expression>^(l(?:ilypond|y))$</expression>
    </injection>

    <tree-sitter language="lilypond">
        <highlights path="lilypond-built-in-highlights.scm" />
        <highlights path="lilypond-highlights.scm" />
        <injections path="lilypond-injections.scm" />
        <folds path="lilypond-folds.scm" />
        <symbols path="lilypond-symbols.scm" />
    </tree-sitter>
</syntax>
